<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.matias.physiocarepsp.viewscontroller.AppointmentsViewController">
    <top>
        <Label text="GestiÃ³n de Citas" style="-fx-font-size:18px; -fx-padding:10"/>
    </top>
    <center>
        <TableView fx:id="tblAppointments" prefHeight="300">
            <columns>
                <TableColumn text="Fecha" fx:id="colDate"/>
                <TableColumn text="Paciente" fx:id="colPatient"/>
                <TableColumn text="Fisio" fx:id="colPhysio"/>
                <TableColumn text="Tratamiento" fx:id="colTreatment"/>
                <TableColumn text="Precio" fx:id="colPrice"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="75"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>

            <Label text="Fecha y hora" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpDate" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Paciente" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbPatient" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Fisioterapeuta" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbPhysio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Tratamiento" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTreatment" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="Precio" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPrice" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            <Button text="Agregar" onAction="#onAddAppointment" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </bottom>
</BorderPane>
